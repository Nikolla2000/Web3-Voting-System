generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(sequence())
  name String?
  email String @unique
  country String
  password String
  registeredAt DateTime @default(now())
  polls Poll[]
}

model Poll {
  id Int @id @default(sequence())
  name String
  description String
  votes1 Int @default(0)
  votes2 Int @default(0)
  users User[]
}

